                    <li>E-mail: contact@mysensei.dk</li>
                </ul>
            </div>
            <div class="foot-content-container">
                <div class="foot-title">Social Media</div>
                    <ul id="social-icons">
                        <a href="http://facebook.com/" target="_blank"><li id="fb">&nbsp;</li></a>
                        <a href="http://pinterest.com/" target="_blank"><li id="pin">&nbsp;</li></a>
                        <a href="http://twitter.com/" target="_blank"><li id="twit">&nbsp;</li></a>
</ul>
                </div>
        </footer>
       
        @Scripts.Render("~/bundles/jquery")
        <script src="@Url.Content("~/Content/js/common.js")"></script>
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
