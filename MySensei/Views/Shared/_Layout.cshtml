<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scallable=no">
    <title>@ViewBag.Title - MySensei</title>
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,cyrillic-ext,cyrillic' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/css")

</head>
<body>
    <header>
        <div class="container">
            <nav>
                <a href="#" class="profile"><img src="#" alt="Profile Button" /></a>
                <ul>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <a href="#" id="menu-icon"></a>
            </nav>
        </div><!-- Header container end -->
    </header><!-- Header end -->
    <!-- Start of RenderBody -->
        @RenderBody()
    <!-- End of RenderBody -->
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div><!-- End footer container -->
    </footer>   

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
